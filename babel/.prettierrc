{
  "arrowParens": "avoid",
  "trailingComma": "es5",
  "useTabs": false,
  "semi": true,
  "singleQuote": false,
  "bracketSpacing": true,
  "jsxBracketSameLine": false,
  "tabWidth": 2,
  "printWidth": 80,
  "overrides": [{
    "files": [
      "**/codemods/*/src/**/*.js",
      "**/codemods/*/test/**/*.js",
      "**/packages/*/src/**/*.js",
      "**/packages/*/test/**/*.js",
      "**/eslint/*/src/**/*.js",
      "**/eslint/*/test/**/*.js"
    ],
    "options": {
      "parser": "babel",
      "trailingComma": "all"
    }
  }]
}
